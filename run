#!/usr/bin/env bash

if [ $1 == 'install' ]; then
    python3 install/localclone_install.py
elif [ $1 == 'build' ]; then 
    cargo build;
elif [ $1 == 'clean' ]; then 
    rm log_file.txt && rm -r -f target && cd local_cloning && rm -r -f cloned_repos && cd ../output && rm *.txt && cd ../log && rm *.txt;
elif [ $1 == 'tempclean' ]; then 
    rm log_file.txt && cd output && rm *.txt && cd ../log && rm *.txt;
else
    export $(cat .env | xargs); ./target/debug/main "$@"
fi